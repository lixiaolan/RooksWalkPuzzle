<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <com.example.android.opengl.GameView
        android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.12" />

    <ViewAnimator
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ViewAnimator1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        tools:context=".MainMenuActivity" >

        <Button
            android:id="@+id/bee_puzzled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="Bee Puzzled"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="40sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bee_puzzled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="Bee Puzzled"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="40sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="new"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="resumeGame"
            android:text="resume"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="options"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="blank"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="manageView"
            android:text="stats"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/short_puz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
	        android:onClick="newGame"
	        android:text="short"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/medium_puz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
			android:onClick="newGame"
            android:text="medium"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/longer_puz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
            android:onClick="newGame"
            android:text="longer"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/longest_puz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"
 			android:onClick="newGame"
            android:text="longest"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/share_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="Share"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />

        <Button
            android:id="@+id/main_menu_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:onClick="resetGame"
            android:text="Main Menu"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FF8C00"
            android:textSize="30sp"
            android:textStyle="normal"
            android:typeface="sans"
            android:visibility="invisible" />
    </ViewAnimator>

</FrameLayout>
